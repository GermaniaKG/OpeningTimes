{
	"name": "germania-kg/opening-hours",
  "description": "Interfaces and implementation for Opening Hours and Times",

	"type":        "library",
	"license":     "MIT",

	"authors": [
		{
			"name":  "Carsten Witt",
			"email": "carstenwitt@germania-kg.de",
			"role":  "Developer"
		}
	],

  "autoload": {
      "psr-4": {
          "Germania\\OpeningTimes\\": "src/"
      }
  },

  "require": {
    "php": "^7.2|^8.0"
  },

  "autoload-dev": {
      "psr-4": { "tests\\": "tests/src" }
  },

  "require-dev": {
      "friendsofphp/php-cs-fixer": "^2.12",
      "php-coveralls/php-coveralls": "^2.0",
      "phpunit/phpunit": "^7.0|^8.0",
      "spatie/phpunit-watcher": "^1.8"
  },

  "scripts": {
      "phpcs":       "php-cs-fixer fix --verbose --diff --dry-run src/",
      "phpcs-apply": "php-cs-fixer fix --verbose --diff src/",
      "phpunit": "phpunit --colors=auto --coverage-text",
      "watch": "phpunit-watcher watch",
      "test": [
          "@phpcs",
          "@phpunit"
      ]
    }
}
